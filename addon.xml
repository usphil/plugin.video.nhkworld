<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.nhkworld"
       name="NHK World"
       version="1.0.0"
       provider-name="usphil">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.requests" version="2.0.0" />
        <import addon="script.module.beautifulsoup4" optional="true" />
    </requires>

    <extension point="xbmc.python.pluginsource"
               library="default.py"
               provides="video" />

    <extension point="xbmc.addon.metadata">
        <summary lang="en">Watch NHK World Live TV and News</summary>
        <description lang="en">
            Stream NHK World live (1080p), browse programs and categories, and watch the latest NHK news by region. Includes multilingual interface support.
        </description>
        <language>en</language>
        <platform>all</platform>
        <license>MIT</license>
        <source>https://github.com/usphil/plugin.video.nhkworld</source>
        <website>https://www3.nhk.or.jp/nhkworld/</website>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
        </assets>
        <news>
            v1.0.0 â€” Initial release (Live TV, Programs, News, Search, Multilingual)
        </news>
    </extension>
</addon>
